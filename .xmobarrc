--------------------------------------------------------------------

Config { 

   -- Configure the appearance
     font = "xft:xos4 Terminus:size=9:antialias=true" 
   , bgColor =      "black"
   , fgColor =      "#CDCDCD"
   , position =     Top

   -- Configure the layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = " %StdinReader% }{ %cpu% | %memory% | %battery% | %date% "

   -- Configure general behaviour
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- Configure the status bar plugins
   , commands = 
        -- memory usage monitor
        [ Run Memory         [ "--template" ,"Mem: <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#00C040"
                             , "--normal"   , "#00C040"
                             , "--high"     , "darkred"
                             ] 10

        -- cpu activity monitor
        , Run Cpu            [ "-L"         ,"0"
                             , "-H"         ,"50"
                             , "--normal"   ,"#00C040"
                             , "--high"     ,"red"
                             ] 10

        -- battery monitor
        , Run Battery        [ "--template", "Batt: <left>%"
                             ,"--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "red"
                             , "--normal"   , "#00C040"
                             , "--high"     , "#00C040"
                             ,"--" -- battery specific options
                                ,"-O", "AC" -- AC "on" status
                                ,"-o", "Bat" -- dicharging status
                                ,"-h", "C0FF00"
                                ,"-l", "red"
                             ] 10
        -- activity monitor     
        , Run StdinReader

        -- time and date indicator
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "<fc=#FF4040>%F (%a) %l:%M</fc>" "date" 10
        ]
   }
